# VerusDB Environment Configuration
# Copy this file to .env and customize for your environment

# Database Configuration
VERUSDB_PATH=./data/database.vdb
VERUSDB_ENCRYPTION_KEY=your-secure-encryption-key-here
VERUSDB_BACKUP_DIR=./backups
VERUSDB_MAX_FILE_SIZE=1073741824
VERUSDB_COMPRESSION_LEVEL=6
VERUSDB_SYNC_INTERVAL=5000
VERUSDB_AUTO_COMPACT=true
VERUSDB_COMPACT_THRESHOLD=1000

# Security Configuration
VERUSDB_KEY_ITERATIONS=100000
VERUSDB_SALT_LENGTH=32
VERUSDB_PASSWORD_MIN_LENGTH=8
VERUSDB_SESSION_TIMEOUT=86400000
VERUSDB_MAX_LOGIN_ATTEMPTS=5
VERUSDB_LOCKOUT_DURATION=900000
VERUSDB_ENABLE_AUDIT_LOG=true

# Admin Panel Configuration
VERUSDB_ADMIN_HOST=localhost
VERUSDB_ADMIN_PORT=4321
VERUSDB_ADMIN_HTTPS=false
VERUSDB_TLS_CERT=./ssl/cert.pem
VERUSDB_TLS_KEY=./ssl/key.pem
VERUSDB_MAX_REQUEST_SIZE=50mb
VERUSDB_ENABLE_CORS=true
VERUSDB_CORS_ORIGINS=*

# Rate Limiting Configuration
VERUSDB_RATE_LIMIT_WINDOW=900000
VERUSDB_RATE_LIMIT_MAX=1000

# Performance Configuration
VERUSDB_MAX_CONCURRENT_OPS=100
VERUSDB_QUERY_TIMEOUT=30000
VERUSDB_INDEX_CACHE_SIZE=1000
VERUSDB_DOCUMENT_CACHE_SIZE=10000
VERUSDB_QUERY_OPTIMIZATION=true
VERUSDB_MAX_SORT_DOCUMENTS=100000
VERUSDB_MAX_AGGREGATION_DOCS=50000

# Logging Configuration
VERUSDB_LOG_LEVEL=info
VERUSDB_LOG_CONSOLE=true
VERUSDB_LOG_FILE=true
VERUSDB_LOG_DIR=./logs
VERUSDB_LOG_MAX_FILE_SIZE=10485760
VERUSDB_LOG_MAX_FILES=5
VERUSDB_LOG_STRUCTURED=true

# Monitoring Configuration
VERUSDB_ENABLE_METRICS=true
VERUSDB_METRICS_PORT=9090
VERUSDB_ENABLE_HEALTH_CHECK=true
VERUSDB_HEALTH_CHECK_PATH=/health
VERUSDB_ENABLE_PERF_TRACKING=true

# Development Configuration
NODE_ENV=development
VERUSDB_ENABLE_STACK_TRACES=false
VERUSDB_ENABLE_PROFILER=false
VERUSDB_ENABLE_HOT_RELOAD=false
